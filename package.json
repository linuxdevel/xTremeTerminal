{
  "name": "xterm-editor",
  "version": "0.1.0",
  "description": "Terminal-based text editor and file browser built with OpenTUI",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "xterminal": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build --compile --outfile=xterminal src/index.ts",
    "build:linux-x64": "bun build --compile --target=bun-linux-x64-baseline --outfile=xterminal-linux-x64 src/index.ts",
    "build:linux-arm64": "bun build --compile --target=bun-linux-arm64 --outfile=xterminal-linux-arm64 src/index.ts",
    "build:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 --outfile=xterminal-darwin-arm64 src/index.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:component": "bun test tests/component",
    "test:integration": "bun test tests/integration"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.79"
  }
}
